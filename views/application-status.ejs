<%- contentFor('body') %>
<div class="status-container">
    <div class="status-header">
        <h1 class="status-title">Application Status</h1>
        <a href="/" class="btn btn-outline">Back to Home</a>
    </div>

    <div class="status-card">
        <div class="status-badge status-<%= application.status.toLowerCase() %>">
            <%= application.status %>
        </div>
        
        <div class="status-details">
            <div class="status-row">
                <div class="status-label">Application ID:</div>
                <div class="status-value"><%= application.id %></div>
            </div>
            <div class="status-row">
                <div class="status-label">Type:</div>
                <div class="status-value"><%= application.type %></div>
            </div>
            <div class="status-row">
                <div class="status-label">Description:</div>
                <div class="status-value"><%= application.description %></div>
            </div>
            <div class="status-row">
                <div class="status-label">Submitted Date:</div>
                <div class="status-value"><%= application.submittedDate.toLocaleDateString() %></div>
            </div>
            <div class="status-row">
                <div class="status-label">Last Updated:</div>
                <div class="status-value"><%= application.lastUpdated.toLocaleDateString() %></div>
            </div>
        </div>
        
        <div class="status-timeline">
            <h3>Application Timeline</h3>
            <div class="timeline">
                <div class="timeline-item completed">
                    <div class="timeline-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <div class="timeline-content">
                        <h4>Application Submitted</h4>
                        <p><%= application.submittedDate.toLocaleDateString() %></p>
                    </div>
                </div>
                
                <% if (application.status !== 'PENDING') { %>
                <div class="timeline-item completed">
                    <div class="timeline-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="timeline-content">
                        <h4>Application Received</h4>
                        <p><%= new Date(application.submittedDate.getTime() + 86400000).toLocaleDateString() %></p>
                    </div>
                </div>
                <% } else { %>
                <div class="timeline-item">
                    <div class="timeline-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="timeline-content">
                        <h4>Application Received</h4>
                        <p>Pending</p>
                    </div>
                </div>
                <% } %>
                
                <% if (application.status === 'PROCESSING' || application.status === 'RESOLVED') { %>
                <div class="timeline-item completed">
                    <div class="timeline-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <div class="timeline-content">
                        <h4>Under Review</h4>
                        <p><%= new Date(application.submittedDate.getTime() + 172800000).toLocaleDateString() %></p>
                    </div>
                </div>
                <% } else if (application.status === 'PENDING') { %>
                <div class="timeline-item">
                    <div class="timeline-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <div class="timeline-content">
                        <h4>Under Review</h4>
                        <p>Pending</p>
                    </div>
                </div>
                <% } %>
                
                <% if (application.status === 'RESOLVED') { %>
                <div class="timeline-item completed">
                    <div class="timeline-icon">
                        <i class="fas fa-check-double"></i>
                    </div>
                    <div class="timeline-content">
                        <h4>Application Completed</h4>
                        <p><%= application.lastUpdated.toLocaleDateString() %></p>
                    </div>
                </div>
                <% } else if (application.status === 'PROCESSING') { %>
                <div class="timeline-item">
                    <div class="timeline-icon">
                        <i class="fas fa-check-double"></i>
                    </div>
                    <div class="timeline-content">
                        <h4>Application Completed</h4>
                        <p>Pending</p>
                    </div>
                </div>
                <% } else { %>
                <div class="timeline-item">
                    <div class="timeline-icon">
                        <i class="fas fa-check-double"></i>
                    </div>
                    <div class="timeline-content">
                        <h4>Application Completed</h4>
                        <p>Pending</p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        
        <div class="status-actions">
            <a href="/contact" class="btn btn-secondary">Contact Support</a>
            <a href="/" class="btn btn-primary">Track Another Application</a>
        </div>
    </div>
</div>

<%- contentFor('style') %>
<style>
.status-container {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
}

.status-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.status-title {
    color: var(--text-color);
    font-size: 2rem;
    font-weight: bold;
    margin: 0;
}

.status-card {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    position: relative;
}

.status-badge {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.9rem;
}

.status-pending {
    background-color: #ffeeba;
    color: #856404;
}

.status-processing {
    background-color: #cce5ff;
    color: #004085;
}

.status-resolved {
    background-color: #d4edda;
    color: #155724;
}

.status-rejected {
    background-color: #f8d7da;
    color: #721c24;
}

.status-details {
    margin-bottom: 2rem;
}

.status-row {
    display: flex;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
}

.status-row:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
}

.status-label {
    width: 150px;
    font-weight: 600;
    color: var(--text-muted);
}

.status-value {
    flex: 1;
    color: var(--text-color);
}

.status-timeline {
    margin-bottom: 2rem;
}

.status-timeline h3 {
    margin-bottom: 1.5rem;
    color: var(--text-color);
}

.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #eee;
}

.timeline-item {
    position: relative;
    margin-bottom: 2rem;
    padding-left: 30px;
}

.timeline-item:last-child {
    margin-bottom: 0;
}

.timeline-icon {
    position: absolute;
    left: -15px;
    width: 30px;
    height: 30px;
    background: #f8f9fa;
    border: 2px solid #ddd;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #aaa;
}

.timeline-item.completed .timeline-icon {
    background: var(--primary-color);
    border-color: var(--primary-color);
    color: white;
}

.timeline-content h4 {
    margin: 0 0 0.5rem;
    font-size: 1rem;
    color: var(--text-color);
}

.timeline-content p {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.9rem;
}

.status-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
}

.btn-outline {
    background: transparent;
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
}

.btn-outline:hover {
    background: rgba(var(--primary-rgb), 0.1);
}

@media (max-width: 768px) {
    .status-container {
        padding: 1rem;
    }
    
    .status-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .status-row {
        flex-direction: column;
    }
    
    .status-label {
        width: 100%;
        margin-bottom: 0.5rem;
    }
    
    .status-actions {
        flex-direction: column;
        gap: 1rem;
    }
    
    .status-actions .btn {
        width: 100%;
    }
}
</style> 