<%- contentFor('body') %>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1 class="dashboard-title">Admin Dashboard</h1>
            <div class="dashboard-actions">
                <a href="/create-officer" class="btn btn-primary">Create Officer Account</a>
                <a href="/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <i class="fas fa-users"></i>
                <h3>Total Users</h3>
                <p>
                    <%= officers.length + citizens.length %>
                </p>
            </div>
            <div class="stat-card">
                <i class="fas fa-user-shield"></i>
                <h3>Officers</h3>
                <p>
                    <%= officers.length %>
                </p>
            </div>
            <div class="stat-card">
                <i class="fas fa-clipboard-list"></i>
                <h3>Complaints</h3>
                <p>
                    <%= complaints.length %>
                </p>
            </div>
        </div>

        <div class="dashboard-grid">
            <!-- Officers Section -->
            <div class="dashboard-section">
                <h2>Officers</h2>
                <div class="users-grid">
                    <% officers.forEach(officer=> { %>
                        <div class="user-card" data-officer-id="<%= officer._id %>" onclick="showOfficerDetails(this)">
                            <div class="user-info">
                                <h3>
                                    <%= officer.username %>
                                </h3>
                                <p>
                                    <i class="fas fa-envelope"></i>
                                    <%= officer.email %>
                                </p>
                                <p>
                                    <i class="fas fa-birthday-cake"></i>
                                    Age: <%= officer.age %>
                                </p>
                                <p>
                                    <i class="fas fa-id-card"></i>
                                    ID: <%= officer._id.toString().substring(0, 8) %>...
                                </p>
                            </div>
                            <div class="user-actions">
                                <a href="/profile/<%= officer.username %>" class="btn btn-primary">
                                    <i class="fas fa-user-circle"></i> View Profile
                                </a>
                                <form action="/delete-user/<%= officer._id %>" method="POST"
                                    onsubmit="return confirm('Are you sure you want to delete this officer?');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>

        <div class="dashboard-grid mt-4">
            <div class="dashboard-section full-width">
                <h2>Recent Complaints</h2>
                <% if (complaints && complaints.length> 0) { %>
                    <div class="complaints-card">
                        <div class="card-header">
                            <h2 class="card-title">Recent Complaints</h2>
                            <a href="/admin-complaints" class="btn btn-primary">
                                <i class="fas fa-list"></i> View All
                            </a>
                        </div>
                        <div class="card-content">
                            <ul class="complaints-list">
                                <% complaints.forEach(complaint=> { %>
                                    <li class="complaint-item">
                                        <div class="complaint-details">
                                            <div class="complaint-status-wrapper">
                                                <div class="complaint-title">
                                                    <a href="/complaint/<%= complaint._id %>">
                                                        <%= complaint.title %>
                                                    </a>
                                                </div>
                                                <div class="status-badge-container">
                                                    <% if (complaint.priority==='high' ) { %>
                                                        <span class="priority-badge high"
                                                            title="High Priority">ðŸ”´</span>
                                                        <% } else if (complaint.priority==='medium' ) { %>
                                                            <span class="priority-badge medium"
                                                                title="Medium Priority">ðŸŸ </span>
                                                            <% } %>
                                                                <span
                                                                    class="status-badge <%= complaint.status.toLowerCase() %>">
                                                                    <%= complaint.status %>
                                                                </span>
                                                </div>
                                            </div>
                                            <div class="complaint-meta">
                                                <span class="complaint-category">
                                                    <%= complaint.category.replace('_', ' ' ) %>
                                                </span>
                                                <span class="complaint-date">
                                                    <%= new Date(complaint.createdAt).toLocaleDateString() %>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="complaint-actions">
                                            <a href="/complaint/<%= complaint._id %>" class="btn">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </div>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>

    <!-- Officer Details Modal -->
    <div id="officerModal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>Officer Details</h2>
            <div id="officerDetails" class="officer-details">
                <!-- Details will be populated by JavaScript -->
            </div>
        </div>
    </div>

<%- contentFor('style') %>
    <!-- External CSS Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin-dashboard.css">

<%- contentFor('script') %>
    <!-- External JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Custom JavaScript -->
    <script src="/js/admin-dashboard.js"></script>