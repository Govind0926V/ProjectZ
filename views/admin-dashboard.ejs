    color: var(--text-color);
    font-size: 2rem;
    font-weight: bold;
}

.dashboard-actions {
    display: flex;
    gap: 1rem;
}

.dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.dashboard-card {
    background: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 1.5rem;
    box-shadow: var(--card-shadow);
}

.card-title {
    color: var(--text-color);
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
    font-weight: 600;
}

.user-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.user-card {
    background: var(--input-bg);
    border-radius: var(--border-radius);
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.user-info {
    flex: 1;
}

.user-name {
    color: var(--text-color);
    font-weight: 500;
    margin-bottom: 0.25rem;
}

.user-detail {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
