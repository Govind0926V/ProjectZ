<%- contentFor('body') %>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1 class="dashboard-title">Admin Dashboard</h1>
            <div class="dashboard-actions">
                <a href="/create-officer" class="btn btn-primary">Create Officer Account</a>
                <a href="/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <i class="fas fa-users"></i>
                <h3>Total Users</h3>
                <p>
                    <%= officers.length + citizens.length %>
                </p>
            </div>
            <div class="stat-card">
                <i class="fas fa-user-shield"></i>
                <h3>Officers</h3>
                <p>
                    <%= officers.length %>
                </p>
            </div>
            <div class="stat-card">
                <i class="fas fa-clipboard-list"></i>
                <h3>Complaints</h3>
                <p>
                    <%= complaints.length %>
                </p>
            </div>
        </div>

        <!-- Complaint Status Chart Section -->
        <div class="chart-section">
            <div class="chart-card">
                <h2>Complaint Status Distribution</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div id="complaintStatusChart" style="min-height: 400px;"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>Count</th>
                                        <th>Percentage</th>
                                    </tr>
                                </thead>
                                <tbody id="statusTableBody">
                                    <!-- Table content will be populated by JavaScript -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="dashboard-grid">
            <!-- Officers Section -->
            <div class="dashboard-section">
                <h2>Officers</h2>
                <div class="users-grid">
                    <% officers.forEach(officer=> { %>
                        <div class="user-card" data-officer-id="<%= officer._id %>" onclick="showOfficerDetails(this)">
                            <div class="user-info">
                                <h3>
                                    <%= officer.username %>
                                </h3>
                                <p>
                                    <i class="fas fa-envelope"></i>
                                    <%= officer.email %>
                                </p>
                                <p>
                                    <i class="fas fa-birthday-cake"></i>
                                    Age: <%= officer.age %>
                                </p>
                                <p>
                                    <i class="fas fa-id-card"></i>
                                    ID: <%= officer._id.toString().substring(0, 8) %>...
                                </p>
                            </div>
                            <div class="user-actions">
                                <a href="/profile/<%= officer.username %>" class="btn btn-primary">
                                    <i class="fas fa-user-circle"></i> View Profile
                                </a>
                                <form action="/delete-user/<%= officer._id %>" method="POST"
                                    onsubmit="return confirm('Are you sure you want to delete this officer?');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>

        <div class="dashboard-grid mt-4">
            <div class="dashboard-section full-width">
                <h2>Recent Complaints</h2>
                <% if (complaints && complaints.length> 0) { %>
                    <div class="complaints-card">
                        <div class="card-header">
                            <h2 class="card-title">Recent Complaints</h2>
                            <a href="/admin-complaints" class="btn btn-primary">
                                <i class="fas fa-list"></i> View All
                            </a>
                        </div>
                        <div class="card-content">
                            <ul class="complaints-list">
                                <% complaints.forEach(complaint=> { %>
                                    <li class="complaint-item">
                                        <div class="complaint-details">
                                            <div class="complaint-status-wrapper">
                                                <div class="complaint-title">
                                                    <a href="/complaint/<%= complaint._id %>">
                                                        <%= complaint.title %>
                                                    </a>
                                                </div>
                                                <div class="status-badge-container">
                                                    <% if (complaint.priority==='high' ) { %>
                                                        <span class="priority-badge high"
                                                            title="High Priority">ðŸ”´</span>
                                                        <% } else if (complaint.priority==='medium' ) { %>
                                                            <span class="priority-badge medium"
                                                                title="Medium Priority">ðŸŸ </span>
                                                            <% } %>
                                                                <span
                                                                    class="status-badge <%= complaint.status.toLowerCase() %>">
                                                                    <%= complaint.status %>
                                                                </span>
                                                </div>
                                            </div>
                                            <div class="complaint-meta">
                                                <span class="complaint-category">
                                                    <%= complaint.category.replace('_', ' ' ) %>
                                                </span>
                                                <span class="complaint-date">
                                                    <%= new Date(complaint.createdAt).toLocaleDateString() %>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="complaint-actions">
                                            <a href="/complaint/<%= complaint._id %>" class="btn">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </div>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>

    <!-- Officer Details Modal -->
    <div id="officerModal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>Officer Details</h2>
            <div id="officerDetails" class="officer-details">
                <!-- Details will be populated by JavaScript -->
            </div>
        </div>
    </div>

<%- contentFor('style') %>
    <!-- External CSS Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin-dashboard.css">

<%- contentFor('script') %>
    <!-- External JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    
    <!-- Custom JavaScript -->
    <script src="/js/admin-dashboard.js"></script>
    <script>
        // Pass the data directly from server to client
        window.complaintsData = <%- JSON.stringify(complaints || []) %>;
        
        function initializeChart() {
            // Prepare data for the chart
            const statusData = {};
            let totalComplaints = 0;
            
            // Count complaints by status
            window.complaintsData.forEach(complaint => {
                const status = complaint.status || 'Unknown';
                statusData[status] = (statusData[status] || 0) + 1;
                totalComplaints++;
            });

            // Create chart
            const chartOptions = {
                series: Object.values(statusData),
                chart: {
                    type: 'donut',
                    height: 350
                },
                labels: Object.keys(statusData),
                colors: ['#4CAF50', '#FFC107', '#F44336', '#2196F3'],
                legend: {
                    position: 'bottom'
                },
                plotOptions: {
                    pie: {
                        donut: {
                            size: '65%',
                            labels: {
                                show: true,
                                total: {
                                    show: true,
                                    label: 'Total',
                                    formatter: function(w) {
                                        return totalComplaints + ' complaints';
                                    }
                                }
                            }
                        }
                    }
                },
                dataLabels: {
                    enabled: true,
                    formatter: function(val) {
                        return val.toFixed(1) + '%';
                    }
                }
            };

            // Render chart
            const chart = new ApexCharts(document.querySelector("#complaintStatusChart"), chartOptions);
            chart.render();

            // Populate table
            const tableBody = document.getElementById('statusTableBody');
            tableBody.innerHTML = ''; // Clear existing content
            
            if (totalComplaints === 0) {
                const noDataRow = document.createElement('tr');
                noDataRow.innerHTML = '<td colspan="3" class="text-center">No complaints data available</td>';
                tableBody.appendChild(noDataRow);
                return;
            }

            Object.entries(statusData).forEach(([status, count]) => {
                const percentage = ((count / totalComplaints) * 100).toFixed(1);
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${status}</td>
                    <td>${count}</td>
                    <td>${percentage}%</td>
                `;
                tableBody.appendChild(row);
            });
        }

        // Initialize when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeChart);
        } else {
            initializeChart();
        }
    </script>