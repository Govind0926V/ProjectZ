<%- contentFor('body') %>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1 class="dashboard-title">Admin Dashboard</h1>
            <div class="dashboard-actions">
                <a href="/create-officer" class="btn btn-primary">Create Officer Account</a>
                <a href="/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <i class="fas fa-users"></i>
                <h3>Total Users</h3>
                <p>
                    <%= officers.length + citizens.length %>
                </p>
            </div>
            <div class="stat-card">
                <i class="fas fa-user-shield"></i>
                <h3>Officers</h3>
                <p>
                    <%= officers.length %>
                </p>
            </div>
            <div class="stat-card">
                <i class="fas fa-clipboard-list"></i>
                <h3>Complaints</h3>
                <p>
                    <%= complaints.length %>
                </p>
            </div>
        </div>

        <div class="dashboard-grid">
            <div class="dashboard-section">
                <h2>Complaint Statistics</h2>
                <div class="chart-container" 
                     data-pending="<%= complaints.filter(c => c.status === 'PENDING').length %>"
                     data-processing="<%= complaints.filter(c => c.status === 'PROCESSING').length %>"
                     data-resolved="<%= complaints.filter(c => c.status === 'RESOLVED').length %>"
                     data-rejected="<%= complaints.filter(c => c.status === 'REJECTED').length %>">
                    <canvas id="complaintsChart"></canvas>
                </div>
                <div class="chart-legend">
                    <div class="legend-item">
                        <span class="legend-color" style="background-color: #ffeeba;"></span>
                        <span>Pending: <%= complaints.filter(c => c.status === 'PENDING').length %></span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color" style="background-color: #cce5ff;"></span>
                        <span>Processing: <%= complaints.filter(c => c.status === 'PROCESSING').length %></span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color" style="background-color: #d4edda;"></span>
                        <span>Resolved: <%= complaints.filter(c => c.status === 'RESOLVED').length %></span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color" style="background-color: #f8d7da;"></span>
                        <span>Rejected: <%= complaints.filter(c => c.status === 'REJECTED').length %></span>
                    </div>
                </div>
            </div>

            <div class="dashboard-section">
                <h2>Officers</h2>
                <div class="users-grid">
                    <% officers.forEach(officer=> { %>
                        <div class="user-card" data-officer-id="<%= officer._id %>" onclick="showOfficerDetails(this)">
                            <div class="user-info">
                                <h3>
                                    <%= officer.username %>
                                </h3>
                                <p>
                                    <%= officer.email %>
                                </p>
                                <p>Age: <%= officer.age %>
                                </p>
                            </div>
                            <div class="user-actions">
                                <a href="/profile/<%= officer.username %>" class="btn btn-primary">View Profile</a>
                                <form action="/delete-user/<%= officer._id %>" method="POST"
                                    onsubmit="return confirm('Are you sure you want to delete this officer?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>

        <div class="dashboard-grid mt-4">
            <div class="dashboard-section full-width">
                <h2>Recent Complaints</h2>
                <% if (complaints && complaints.length> 0) { %>
                    <div class="dashboard-card complaints-card">
                        <div class="card-header">
                            <h2 class="card-title">Recent Complaints</h2>
                            <a href="/admin-complaints" class="btn btn-sm">View All</a>
                        </div>
                        <div class="card-content">
                            <ul class="complaints-list">
                                <% complaints.forEach(complaint=> { %>
                                    <li class="complaint-item">
                                        <div class="complaint-details">
                                            <div class="complaint-status-wrapper">
                                                <div class="complaint-title">
                                                    <a href="/complaint/<%= complaint._id %>">
                                                        <%= complaint.title %>
                                                    </a>
                                                </div>
                                                <div class="status-badge-container">
                                                    <% if (complaint.priority==='high' ) { %>
                                                        <span class="priority-badge high"
                                                            title="High Priority">ðŸ”´</span>
                                                        <% } else if (complaint.priority==='medium' ) { %>
                                                            <span class="priority-badge medium"
                                                                title="Medium Priority">ðŸŸ </span>
                                                            <% } %>
                                                                <span
                                                                    class="status-badge <%= complaint.status.toLowerCase() %>">
                                                                    <%= complaint.status %>
                                                                </span>
                                                </div>
                                            </div>
                                            <div class="complaint-meta">
                                                <span class="complaint-category">
                                                    <%= complaint.category.replace('_', ' ' ) %>
                                                </span>
                                                <span class="complaint-date">
                                                    <%= new Date(complaint.createdAt).toLocaleDateString() %>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="complaint-actions">
                                            <a href="/complaint/<%= complaint._id %>" class="btn btn-sm">View</a>
                                        </div>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>

    <!-- Officer Details Modal -->
    <div id="officerModal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>Officer Details</h2>
            <div id="officerDetails" class="officer-details">
                <!-- Details will be populated by JavaScript -->
            </div>
        </div>
    </div>

